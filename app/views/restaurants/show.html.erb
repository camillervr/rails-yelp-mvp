<div class="container mt-5">
  <h1><%= @restaurant.name %> <small>(<%= @restaurant.category.capitalize %>)</small></h1>
  <ul>
    <li>Address: <%= @restaurant.address %></li>
    <li>Tel: <%= @restaurant.phone_number %></li>
  </ul>
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.rating %> - <%= review.content %></li>
    <% end %>
  </ul>
  <br>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %><br>
  <%= link_to "Back to all restaurants", restaurants_path %>
</div>
